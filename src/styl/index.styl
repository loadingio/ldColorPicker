@import 'vars'
@import 'basic'

html,body
  width: 100%
  height: 100%
  margin: 0
  padding: 0
body
  position: relative

#root
  margin: 20px auto
  padding: 0 20px
  max-width: 1280px

#blah
  width: 64px
  height: 640px
  div
    width: 100%
    height: 0.2777777777777777%

h2
  border-bottom: 1px solid #eee
  padding-bottom: 7px
  margin: 30px 0 30px

h3
  margin: 20px 0 20px

#landing
  width: 100%
  height: 310px
  background: #eee url(../../img/grid.png)
  box-shadow: inset 0 -5px 10px rgba(0,0,0,0.1)
  .inner
    padding: 80px 20px 80px 20px
    max-width: 1024px
    margin: auto
  .title
    font-size: 3.6em
    font-weight: bold
    display: inline-block
    margin: 16px 10px 0 0
    @media (max-width: 900px)
      margin: 8px 0 -10px
  .brand
    white-space: nowrap
    font-family: "century gothic"
    font-size: 1em
    font-weight: 200
    color: gray
    display: inline-block
    @media (max-width: 900px)
      margin-bottom: 8px
  .subtitle
    font-size: 1.6em
    no-selection()
    span
      text-shadow: 0 0 3px rgba(0,0,0,0.3)

.subnav
  display: none
  li > a
    padding: 4px 15px 4px 25px
#affix li.active .subnav
  display: block
#affix li a
  color: #666
#affix
  top: 20px
  li > a
    border-left: 4px solid transparent
  li.active > a
    font-weight: bold
    border-left: 4px solid #777

.ldColorPicker.landing
  width: 190px
  margin-left: -70px
  .ldcp-palette
    justify-content: center
  .ldcp-sep
    display: none
  .ldcp-panel:after
    left: 85px

@media (max-width: 900px)
  #landing-palettes
    .ldColorPicker:nth-of-type(1), .ldColorPicker:nth-of-type(5)
      display: none

#examples
  .ldColorPicker
    display: block
    max-width: 100%
    margin: auto
    margin-top: 5px
  .row
    margin-top: 30px
